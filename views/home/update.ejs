<div class="container">
  <header>
    <h1>Update post</h1>
  </header>
  <hr/>
  <nav>
    <ul class="nav nav-pills">
      <li><a href="/">Home <span class="badge"></span></a></li>
      <li><a href="/post/create">Create</a></li>
      <li><a href="/about">About</a></li>
    </ul>
  </nav>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <form action="/post/<%= post.id %>" method="POST">
        <input type="hidden" name="_method" value="put" />
        <table  class="table table-striped">
          <tr>
            <td><label for="title">Title<label></td>
            <td><input id="title" class="form-control" type="text" name="title" value="<%= post.title %>" required></td>
          </tr>
          <tr>
            <td><label for="content">Content<label></td>
            <td><textarea name="content" id="content" required class="form-control" rows="3"><%= post.content %></textarea></td>
          </tr>
          <tr>
            <td></td>
            <td><input type="submit" name="submit-btn" value="Submit" class="btn btn-default"></td>
          </tr>

        </table>
      </form>
    </div>
    <div class="col-md-6"></div>
  </div>
  
  <hr>
</div>
